// Copie e substitua no seu schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SystemConfig {
  id              Int     @id @default(autoincrement())
  googleDriveJson Json?   
  googleFolderId  String? 
}

model Client {
  id               Int      @id @default(autoincrement())
  nome             String
  tipo             String   @default("PF")
  cpf_cnpj         String?  @unique
  whatsapp         String?
  email            String?
  cidade           String?
  estado           String?
  
  // Veículo & Coberturas
  renavam            String?
  modelo_veiculo     String?
  ano_veiculo        String?
  condutor_principal String?
  km                 String?
  guincho            String?
  carro_reserva      String?
  danos_terceiros    String? 
  
  // NOVO: Para saber se o cliente é "quente"
  status           String   @default("ATIVO") // ATIVO, INATIVO
  ultima_interacao DateTime @default(now())

  apolices         Policy[]
  criadoEm         DateTime @default(now())
}

model Policy {
  id             Int      @id @default(autoincrement())
  numero         String?
  status         String   @default("ATIVA")
  tipo_seguro    String
  data_inicio    DateTime
  data_fim       DateTime
  
  // Financeiro
  premio_liquido Float?   // Valor total do seguro
  comissao       Float?   // Quanto você ganha
  
  pdf_url        String?  
  pdf_file_id    String?  
  clientId       Int
  client         Client   @relation(fields: [clientId], references: [id])
}

model Lead {
  id              Int      @id @default(autoincrement())
  criadoEm        DateTime @default(now())
  nome            String
  whatsapp        String
  email           String?
  cpf             String?
  status          String   @default("NOVO")
  tipo_seguro     String?
  placa           String?
  modelo_veiculo  String?
  ano_veiculo     String?
  uso_veiculo     String?
  dados_extras    Json?
}